@model IEnumerable<ColorScheme.Models.UserM>
  

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
             
                <td>
                    
                    <a asp-action="Details" asp-route-id="@item.ID">My Saved Colors</a> 
                   
                </td>
            </tr>
        }
    </tbody>
</table>