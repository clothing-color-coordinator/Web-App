@model ColorScheme.Models.ColorSchemeM

@{
    ViewData["Title"] = "ColorScheme";
    Layout = "_Layout2";
}

<body>
    <div class="col-md-4 col-xs-12"> </div>
    <div class="col-md-4 col-xs-12">
        <form method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Type a Color</label>
                <input name="color" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SchemeType" class="control-label">Select a Palette</label>
                <select name="SchemeType" class="form-control">
                    <option>ComplementaryPalette</option>
                    <option>SplitComplementaryPalette</option>
                    <option>TriadicPalette</option>
                    <option>AnalogousPalette</option>
                </select>
                <span asp-validation-for="SchemeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4 col-xs-12"> </div>
</body>


